prefix=@CMAKE_INSTALL_PREFIX@
exec_prefix=${prefix}/bin
libdir=${prefix}/lib
includedir=${prefix}/include

Name: libcrn
Description: The CoReNum image processing library.
Requires: @PKGC_LIBCRN_DEPS@
Version: @CRN_PACKAGE_VERSION@
Libs: -L${libdir} -lcrn @PKGC_LIBCRN_LDFLAGS@ -pthread -lstdc++ -lm
Cflags: -std=c++11 -I${includedir}/libcrn-@CRN_PACKAGE_VERSION_MAJOR@.@CRN_PACKAGE_VERSION_MINOR@ @PKGC_LIBCRN_CFLAGS@
